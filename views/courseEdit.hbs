<h1>Edit {{course.name}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      required
      value={{course.title}}
    />
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="enter name"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
      value={{course.price}}
    />
    <label for="price">Price of course</label>
    <span class="helper-text" data-error="enter price"></span>
  </div>

  <div class="input-field">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      required
      value={{course.img}}
    />
    <label for="img">URL of picture</label>
    <span class="helper-text" data-error="enter url"></span>
  </div>

  <input type="hidden" , name="id" value={{course.id}} />

  <input type="hidden" name="_csrf" value={{csrf}} />

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="_csrf" value={{csrf}} />

  <input type="hidden" name="id" value={{course.id}} />
  <button class="btn red">Delete</button>
</form>